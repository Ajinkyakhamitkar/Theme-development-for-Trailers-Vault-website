<script>
$(document).ready(function() {
  $('.slider').slick({
    arrows: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    prevArrow: '<button type="button" class="slick-prev">Previous</button>',
    nextArrow: '<button type="button" class="slick-next">Next</button>'
  });

  $('.grid-item iframe').on('click', function() {
    var videoLink = $(this).attr('src');
    var videoTitle = $(this).siblings('h3').text();
    var popupContent = '<iframe width="800" height="450" src="' + videoLink + '" frameborder="0" allowfullscreen></iframe>';
    $('.popup-content').html(popupContent);
    $('.popup-title').text(videoTitle);
    $('.popup').fadeIn();
  });

  $('.popup-close').on('click', function() {
    $('.popup').fadeOut();
    $('.popup-content').html('');
    $('.popup-title').text('');
  });
});
</script>
